{% extends 'base.html.twig' %}

{% block title %}Bienvenido{% endblock %}

{% block page %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Informaci&oacute;n</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                            <li class="breadcrumb-item active">Contacto</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <!-- Default box -->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6 col-12">
                        <div class="info-box">
                            <span class="info-box-icon bg-info"><i class="fa fa-dollar-sign"></i></span>

                            <div class="info-box-content">
                                <span class="info-box-text">Royalties Acumulados Bolsa en D&oacute;lares</span>
                                <span class="info-box-number"><i class="fa fa-dollar-sign"></i> {{ bolsadolares }}</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                    </div>
                    <!-- /.col -->
                    <div class="col-sm-6 col-12">
                        <div class="info-box">
                            <span class="info-box-icon bg-success"><i class="fa fa-euro-sign"></i></span>

                            <div class="info-box-content">
                                <span class="info-box-text">Royalties Acumulados Bolsa en Euros</span>
                                <span class="info-box-number"><i class="fa fa-euro-sign"></i> {{ bolsaeuros }}</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                    </div>
                    <!-- /.col -->
                </div>

                <div class="card card-solid">
                    <div class="card-body pb-0">
                        <div class="row d-flex">
                            <div class="col-9" style="padding-left: 250px">
                                <div class="card bg-light">
                                    <div class="card-header text-muted border-bottom-0">
                                        Perfil del Usuario
                                    </div>
                                    <div class="card-body pt-0">
                                        <div class="row">
                                            <div class="col-7">
                                                <h2 class="lead">
                                                    <b>{{ app.user.nombre }} {{ app.user.apellidos }}</b>
                                                </h2>
                                                <p class="text-muted text-sm"><i
                                                            class="fas fa-lg fa-mail-bulk"></i><b>
                                                        Correo: </b> {{ app.user.email }} </p>
                                                <ul class="ml-4 mb-0 fa-ul text-muted">
                                                    <li class="small"><span class="fa-li"><i
                                                                    class="fas fa-lg fa-building"></i></span><b>
                                                            Direcci&oacute;n:</b>
                                                        {{ app.user.direccion }}
                                                    </li>
                                                    <li class="small"><span class="fa-li"><i
                                                                    class="fas fa-lg fa-phone"></i></span>
                                                        <b> Tel&eacute;fono #:</b> {{ app.user.telefono }}
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="col-5 text-center">
                                                <img src="{{ asset('dist/img/user1-128x128.jpg') }}" alt=""
                                                     class="img-circle img-fluid">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>

            </div><!-- /.card -->
        </section>
        <!-- /.content -->
    </div>
{% endblock %}
