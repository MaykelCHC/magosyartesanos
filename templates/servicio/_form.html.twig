{{ form_start(form, {'attr': {'id':'form_newservicio'}}) }}
<form role="form" action="{{ path('app_servicio_new') }}">
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <div class="text-danger">
                    {{ form_errors(form) }}
                </div>
                <div class="input-group">
                    {{ form_widget(form.nombre) }}
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group">
                <!-- <label for="customFile">Custom File</label> -->
                <div class="custom-file">
                    {{ form_widget(form.imagen) }}
                    <label class="custom-file-label" for="servicio_imagen">Adjuntar Imagen del Servicio</label>
                </div>
            </div>
        </div>

        <div class="col-sm-8">
            <div class="form-group">
                <div class="input-group">
                    {{ form_widget(form.beneficioxventa) }}
                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="form-group">
                <div class="form-check">
                    <div id="servicio_tipodmoneda">
                        <div class="row" style="padding-top: 5px;">
                            <div class="form-check">
                                <input id="servicio_tipodmoneda_0" class="form-check-input" value="dolar" type="radio"
                                       required="required" name="servicio[tipodmoneda]">
                                <label class="required form-check-label" for="servicio_tipodmoneda_0"
                                       style="padding-right: 10px;">USD</label>
                            </div>
                            <div class="form-check">
                                <input id="servicio_tipodmoneda_1" class="form-check-input" value="euro" type="radio"
                                       required="required" name="servicio[tipodmoneda]" checked="">
                                <label class="required form-check-label" for="servicio_tipodmoneda_1">EUR</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <label style="padding-top: 5px; padding-right: 15px">I.V.A.</label>
                        <div id="servicio_iv">
                            <div class="row" style="padding-top: 5px;">
                                <div class="form-check">
                                    <input id="servicio_iv_0" class="form-check-input" value="0" type="radio"
                                           required="required" name="servicio[iv]">
                                    <label class="required form-check-label" for="servicio_iv_0"
                                           style="padding-right: 5px;">0%</label>
                                </div>
                                <div class="form-check">
                                    <input id="servicio_iv_1" class="form-check-input" value="4" type="radio"
                                           required="required" name="servicio[iv]" checked="">
                                    <label class="required form-check-label" for="servicio_iv_1"
                                           style="padding-right: 5px;">4%</label>
                                </div>
                                <div class="form-check">
                                    <input id="servicio_iv_2" class="form-check-input" value="21" type="radio"
                                           required="required" name="servicio[iv]" checked="">
                                    <label class="required form-check-label" for="servicio_iv_2"
                                           style="padding-right: 5px;">21%</label>
                                </div>
                                <div class="form-check">
                                    <input id="servicio_iv_3" class="form-check-input" value="otro" type="radio"
                                           required="required" name="servicio[iv]" checked="">
                                    <label class="required form-check-label" for="servicio_iv_3">Otro</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <div class="input-group">
                    <input type="text" name="nuevo" class="form-control" placeholder="Ingresar I.V.A.">
                </div>
            </div>
        </div>

        <div class="col-sm-12">
            <div class="form-group">
                <div class="input-group">
                    {{ form_widget(form.concepto) }}
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group">
                <div class="input-group">
                    {{ form_widget(form.descripcion) }}
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group">
                <!-- <label for="customFile">Custom File</label> -->
                <div class="custom-file">
                    {{ form_widget(form.documento) }}
                    <label class="custom-file-label" for="servicio_imagen">Adjuntar Documento del Servicio</label>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group">
                <div class="input-group">
                    {{ form_widget(form.usuarioid) }}
                </div>
            </div>
        </div>

    </div>
    <div>
        <button type="submit" class="btn btn-primary" style="float: left;"> Guardar</button>
        <a class="btn btn-danger" style="float: right" href="{{ path('app_servicio_index') }}"> Cancelar</a>
    </div>
    {{ form_row(form._token) }}
</form>
{{ form_end(form) }}