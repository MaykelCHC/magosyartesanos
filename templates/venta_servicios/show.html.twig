{% extends 'base.html.twig' %}

{% block title %}Venta Servicios{% endblock %}

{% block page %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            <h3>Venta Servicios</h3>
                        </div>
                    </div>
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ venta_servicio.id }}</td>
                        </tr>
                        <tr>
                            <th>Fecha</th>
                            <td>{{ venta_servicio.fecha ? venta_servicio.fecha|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Concepto</th>
                            <td>{{ venta_servicio.concepto }}</td>
                        </tr>
                        <tr>
                            <th>Valor</th>
                            <td>{{ venta_servicio.valor }}</td>
                        </tr>
                        <tr>
                            <th>Comision de Royalties</th>
                            <td>{{ venta_servicio.comisionRoyalties }}</td>
                        </tr>
                        <tr>
                            <th>Documento</th>
                            <td>{{ venta_servicio.documento }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <div style="padding: 20px">
                        <a class="btn btn-danger" style="float: left" href="{{ path('app_venta_servicios_index') }}">Regresar</a>

                        <a class="btn btn-success" style="float: right"
                           href="{{ path('app_venta_servicios_edit', {'id': venta_servicio.id}) }}">Editar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
